            tools:ignore="MissingConstraints" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="FRACTURE"
            android:textSize="24dp"
