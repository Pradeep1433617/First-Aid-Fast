            android:layout_width="match_parent"
            android:layout_height="10dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="ROAD RASH"
            android:textSize="24dp"
            android:textStyle="bold"

            android:background="@drawable/custom_button"
