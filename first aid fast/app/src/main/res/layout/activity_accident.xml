            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="NOSE INJURY"
            android:textSize="24dp"
            android:textStyle="bold"

            android:background="@drawable/custom_button"
            tools:ignore="MissingConstraints" />
